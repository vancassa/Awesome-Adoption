    "eslint-plugin-testing-library": "^7.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "react-test-renderer": "^19.2.3",
    "standard": "^17.1.2",
    "tailwindcss": "^4.1.18"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 26,
        "functions": 26,
        "lines": 26,
        "statements": 26
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
